#!/bin/sh
NAME="mesa"
RELEASE="1"
VERSION="23.1.3"
SOURCES="https://archive.mesa3d.org/mesa-$VERSION.tar.xz"
SHA256SUM="2f6d7381bc10fbd2d6263ad1022785b8b511046c1a904162f8f7da18eea8aed9  mesa-23.1.3.tar.xz"
DESCRIPTION="The 3D Graphics Library"
build() {
    export PYTHONPATH=$(realpath /usr/lib/python*/site-packages):$(python -c "import sys; print(':'.join(sys.path))")
    meson --buildtype=release  --prefix=/usr   \
      -Dplatforms=wayland \
      -Dgallium-drivers=auto  \
      -Dvulkan-drivers=""     \
      -Dglx=disabled          \
      -Dvalgrind=disabled     \
      -Dlibunwind=disabled    \
      build/
    ninja -C build/
}

install() {
    DESTDIR=$ROOT ninja -C build/ install
}
