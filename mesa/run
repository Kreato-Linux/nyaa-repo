#!/bin/sh
NAME="mesa"
RELEASE="2"
VERSION="24.0.6"
SOURCES="https://archive.mesa3d.org/mesa-$VERSION.tar.xz"
DEPENDS="libelf libxxf86vm libglvnd eudev llvm flex libxshmfence libxdamage"
BUILD_DEPENDS="libdrm libx11 libxrandr meson libelf python-mako wayland-protocols wayland"
SHA256SUM="8b7a92dbe6468c18f2383700135b5fe9de836cdf0cc8fd7dbae3c7110237d604"
DESCRIPTION="The 3D Graphics Library"
build() {
    meson \
      --buildtype=release     \
      --prefix=/usr           \
      -Dplatforms=wayland,x11 \
      -Dgallium-drivers=auto  \
      -Dvulkan-drivers=""     \
      -Degl=enabled           \
      -Dgles1=disabled        \
      -Dglvnd=true            \
      -Dgles2=enabled         \
      -Dglx=dri               \
      -Dvalgrind=disabled     \
      -Dlibunwind=disabled    \
      build/
    ninja -C build/
}

package() {
    DESTDIR=$ROOT ninja -C build/ install
}
