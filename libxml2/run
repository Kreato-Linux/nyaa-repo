#!/bin/sh
NAME="libxml2"
VER1="2.10"
VERSION=2.10.2
SOURCES="https://download.gnome.org/sources/libxml2/$VER1/libxml2-$VERSION.tar.xz"
SHA256SUM="d240abe6da9c65cb1900dd9bf3a3501ccf88b3c2a1cb98317d03f272dda5b265  libxml2-2.10.2.tar.xz;"
DESCRIPTION="Libraries and utilities for parsing XML files"

build() {
    tar -xvf libxml2-$VERSION.tar.xz
    cd libxml2-$VERSION || exit 1
    ./configure --prefix=/usr    \
            --disable-static \
            --with-history   \
            --with-python=/usr/bin/python3 \
    make
    make DESTDIR=$ROOT install
}
