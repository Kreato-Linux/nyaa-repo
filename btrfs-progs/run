#!/bin/sh
NAME="btrfs-progs"
RELEASE="1"
VERSION="6.3.2"
SOURCES="https://mirrors.edge.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/btrfs-progs-v$VERSION.tar.xz"
SHA256SUM="a9f26199d5817816f5b0a8f0f63763f3fb0143a20388a929b742dcad5bf27c24  btrfs-progs-v6.3.2.tar.xz"
DESCRIPTION="BTRFS filesystem utilities"

build() {
    ./configure --disable-documentation --prefix=/usr
    make -j$(nproc)
}

install() {
    make install
}
