#!/bin/sh                                                                      
NAME="openssh"
RELEASE="2"
VERSION="9.4p1"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-$VERSION.tar.gz"
DEPENDS="shadow zlib"
SHA256SUM="3608fd9088db2163ceb3e600c85ab79d0de3d221e59192ea1923e23263866a85"
DESCRIPTION="ssh tools"                                                        
build() {                                                                      
    ./configure --without-zlib-version-check --prefix=/usr                                                  
    make                                                                       
}

package() {
    make DESTDIR="$ROOT" install                                                               
}
