#!/bin/sh
NAME="conmon"
RELEASE="1"
VERSION="2.1.8"
SOURCES="https://github.com/containers/conmon/archive/refs/tags/v$VERSION.tar.gz"
BUILD_DEPENDS="go"
DEPENDS="glib"
SHA256SUM="e72c090210a03ca3b43a0fad53f15bca90bbee65105c412468009cf3a5988325  v2.1.8.tar.gz"
DESCRIPTION="An OCI container runtime monitor"

build() {
    make -j$(nproc)
}

package() {
    make install
}
