#!/bin/sh
NAME="xtrans"
RELEASE="1"
VERSION="1.5.0"
SOURCES="https://www.x.org/releases/individual/lib/xtrans-$VERSION.tar.xz"
SHA256SUM="1ba4b703696bfddbf40bacf25bce4e3efb2a0088878f017a50e9884b0c8fb1bd  xtrans-1.5.0.tar.xz"
DESCRIPTION="X transport library"

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install
}
