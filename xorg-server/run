#!/bin/sh
NAME="xorg-server"
RELEASE="1"
VERSION="21.1.8"
SOURCES="https://www.x.org/releases/individual/xserver/xorg-server-$VERSION.tar.gz"
SHA256SUM="d845d1fee2edb33cb94f31b5170f26d98ed31f853ce2da21daca7c60c8ff3aae  xorg-server-21.1.8.tar.gz"
DEPENDS="libdrm libx11 libxrender libxshmfence libepoxy dbus libglvnd libpciaccess libxcvt libxfont2 libxshmfence libnettle pixman"
DESCRIPTION="X11 client-side library"

build() {
    meson setup build
    ninja -C build
}

package() {
    DESTDIR=$ROOT ninja -C build install
}
