#!/bin/sh
NAME="nyaa"
RELEASE="1"
VERSION="2.1b"
SOURCES="https://github.com/kreatolinux/nyaa/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="cd2e5595db2e6563e3b86d367f6704728678284736eaeb10854a18c677249fc4  v2.1b.tar.gz"
DESCRIPTION="The nyaa package manager"

build() {
        cd nyaa-$VERSION || exit 1
        mkdir -p "$ROOT/usr/bin" "$ROOT/usr/local/man/man1"
        cp nyaa "$ROOT/usr/bin/"
}
