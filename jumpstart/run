#!/bin/sh
NAME="jumpstart"
RELEASE="1"
VERSION="4.2.0"
SOURCES="https://github.com/kreatolinux/src/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="c26ae5419d0d07405d28f1caf43d11d40f9d884739b1e4741d73c77658536aca  v4.2.0.tar.gz"
DESCRIPTION="Kreato Linux's Init system/Service manager"

build() {
        nimble install cligen fusion -y
        nim c -d:release --threads:on -o="out/jumpstart" "src/jumpstart/jumpstart.nim"
        nim c -d:release --threads:on -o="out/jumpctl" "src/jumpstart/jumpctl.nim"
}

install() {
        mkdir -p "$ROOT/bin"
        cp out/jumpctl "$ROOT/bin/"
        cp out/jumpstart "$ROOT/bin"
}
