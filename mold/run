#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="2.1.0"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="cmake"
SHA256SUM="a32bec1282671b18ea4691855aed925ea2f348dfef89cb7689cd81273ea0c5df"
DESCRIPTION="A Modern Linker"

build() {
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
}

package() {
	cmake --install build
}
