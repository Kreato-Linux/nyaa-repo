#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="1.7.1"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM=";fa2558664db79a1e20f09162578632fa856b3cde966fbcb23084c352b827dfa9  v1.7.1.tar.gz"
DESCRIPTION="A Modern Linker"

build() {
    tar -xvf v$VERSION.tar.gz
    cd mold-$VERSION || exit 1
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
    cmake --install .
}
