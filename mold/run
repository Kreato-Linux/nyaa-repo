#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="2.3.1"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="cmake"
SHA256SUM="380f540114408c37bcdb7f3bda91a056448a93124ca6992a373ae2bda35e9af7"
DESCRIPTION="A Modern Linker"

build() {
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
}

package() {
	cmake --install build
}
