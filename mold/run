#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="2.0.0"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="2ae8a22db09cbff626df74c945079fa29c1e5f60bbe02502dcf69191cf43527b  v2.0.0.tar.gz"
DESCRIPTION="A Modern Linker"

build() {
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
}

install() {
	cmake --install build
}
