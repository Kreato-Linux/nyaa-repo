#!/bin/sh
NAME="mold"
RELEASE="1"
VERSION="2.2.0"
SOURCES="https://github.com/rui314/mold/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="cmake"
SHA256SUM="78ddddaaa004e50f8d92a13d8e792a46a1b37745fab48d39ad16aeb5a776e7c6"
DESCRIPTION="A Modern Linker"

build() {
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=c++ -DCMAKE_INSTALL_PREFIX=/usr ..
    cmake --build . -j $(nproc)
}

package() {
	cmake --install build
}
