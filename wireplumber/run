#!/bin/sh
NAME="wireplumber"
RELEASE="1"
VERSION="0.4.16"
SOURCES="https://gitlab.freedesktop.org/pipewire/wireplumber/-/archive/$VERSION/wireplumber-$VERSION.tar.gz"
DEPENDS="pipewire"
REPLACES="pipewire-session-manager"
BUILD_DEPENDS="meson"
SHA256SUM="39fee0f1e8d87b8705ca6dfd168be8bb59f3f04358896c66dc862b1a9ea2e9fd"
DESCRIPTION="Session / policy manager implementation for PipeWire"

build() {
    meson setup --prefix=/usr \
      --buildtype=release \
    build                    
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
