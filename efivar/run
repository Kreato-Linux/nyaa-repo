#!/bin/sh
NAME="efivar"
VERSION="38"
DESCRIPTION="efivar provides tools and libraries to manipulate EFI variables"

build() {
    wget https://github.com/rhboot/efivar/releases/download/$VERSION/efivar-$VERSION.tar.bz2
    tar -xvf efivar-$VERSION.tar.bz2
    cd efivar-$VERSION || exit 1
    make CFLAGS="-O2 -Wno-stringop-truncation"
    make DESTDIR="$ROOT" install
}
