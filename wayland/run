#!/bin/sh
NAME="wayland"
RELEASE="1"
VERSION="1.21.0"
SOURCES="https://gitlab.freedesktop.org/wayland/wayland/-/releases/$VERSION/downloads/wayland-$VERSION.tar.xz"
SHA256SUM="6dc64d7fc16837a693a51cfdb2e568db538bfdc9f457d4656285bb9594ef11ac  wayland-1.21.0.tar.xz"
DESCRIPTION="Wayland is a project to define a protocol for a compositor to talk to its clients as well as a library implementation of the protocol."

build() {
    tar -xvf wayland-$VERSION.tar.xz
    cd wayland-$VERSION || exit 1
    mkdir build
    cd build
    meson --prefix=/usr       \
          --buildtype=release \
          -Ddocumentation=false
    ninja
    DESTDIR="$ROOT" ninja install
}
