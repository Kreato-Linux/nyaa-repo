#!/bin/sh
NAME="podman"
RELEASE="1"
VERSION="4.5.1"
SOURCES="https://github.com/containers/podman/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="ee2c8b02b7fe301057f0382637b995a9c6c74e8d530692d6918e4c509ade6e39  v4.5.1.tar.gz"
DESCRIPTION="A tool for managing OCI containers and pods"

build() {
    export GOENV="/tmp/kpkg/srcdir/go/env" 
    export GOCACHE="/tmp/kpkg/srcdir/go-build"
    go env -w  GOCACHE="/tmp/kpkg/srcdir/go-build"
    make BUILDTAGS="" -j$(nproc)
}

install() {
    sed -i 's/-sfr/-sf/g' Makefile
    make install
}
