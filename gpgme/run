#!/bin/sh
NAME="gpgme"
RELEASE="1"
VERSION="1.20.0"
SOURCES="https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.20.0.tar.bz2"
SHA256SUM="25a5785a5da356689001440926b94e967d02e13c49eb7743e35ef0cf22e42750  gpgme-1.20.0.tar.bz2"
DESCRIPTION="GNU Privacy Guard Made Easy"

build() {
    ./configure --prefix=/usr
    make -j$(nproc)
}

install() {
    make DESTDIR="$ROOT" install
}
