#!/bin/sh
NAME="gpgme"
RELEASE="1"
VERSION="1.23.1"
SOURCES="https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.23.1.tar.bz2"
DEPENDS="gnupg"
SHA256SUM="a0c316f7ab7d3bfb01a8753c3370dc906e5b61436021f3b54ff1483b513769bd"
DESCRIPTION="GNU Privacy Guard Made Easy"

build() {
    kpkgConfigure --prefix=/usr
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}
