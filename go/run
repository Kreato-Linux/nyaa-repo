#!/bin/sh
NAME="go"
RELEASE="1"
VERSION="1.19.4"
SOURCES="https://go.dev/dl/go$VERSION.src.tar.gz"
SHA256SUM="eda74db4ac494800a3e66ee784e495bfbb9b8e535df924a8b01b1a8028b7f368  go1.19.4.src.tar.gz"
DESCRIPTION="Go is a statically typed, compiled programming language designed at Google"
build() {
    # bootstrap go1.4
    wget https://go.dev/dl/go1.4.src.tar.gz # we must download this separately, because go uses the go/ dir for all releases
    echo "3ae9f67e45a5ca7004b28808da8b1367d328a371d641ddbe636c0fb0ae0ffdae  go1.4.src.tar.gz" | sha256sum -c -
    if [ $? -eq 1 ]
    then
        echo "go1.4 checksums did not match"
        exit 1
    fi
    mkdir go1.4
    tar -zxf go1.4.src.tar.gz -C ./go1.4
    cd go1.4/go/src || exit 1
    
    export GOROOT_BOOTSTRAP=$(realpath ..)

    CGO_ENABLED=0 TMPDIR=/tmp CFLAGS="-Wno-error=sizeof-array-div -Wno-error=implicit-fallthrough -Wno-error=use-after-free -Wno-error=shift-negative-value" ./make.bash
    # done bootstrapping go

    cd ../../../go/src || exit 1
    ./make.bash
    mkdir -p $ROOT/bin
    cd ..
    cp -r ./bin $ROOT/bin
    mkdir -p $ROOT/usr/local/go
    cp -r . $ROOT/usr/local/go
    go env -w GOROOT=/usr/local/go
}
