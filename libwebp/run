#!/bin/sh
NAME="libwebp"
RELEASE="1"
VERSION="1.3.1"
SOURCES="https://storage.googleapis.com/downloads.webmproject.org/releases/webp/libwebp-$VERSION.tar.gz"
DEPENDS="libjpeg-turbo libpng libtiff"
SHA256SUM="b3779627c2dfd31e3d8c4485962c2efe17785ef975e2be5c8c0c9e6cd3c4ef66  libwebp-1.3.1.tar.gz"
DESCRIPTION="libwebp"

build() {
  
  # Flags are from BLFS
  ./configure --prefix=/usr           \
            --enable-libwebpmux     \
            --enable-libwebpdemux   \
            --enable-libwebpdecoder \
            --enable-libwebpextras  \
            --enable-swap-16bit-csp \
            --disable-static        
    make
}

package() {
    make DESTDIR=$ROOT install
}
