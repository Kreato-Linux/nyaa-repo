#!/bin/sh
NAME="json-glib"
VERSION="1.6.6"
SOURCES="https://gitlab.gnome.org/GNOME/json-glib/-/archive/$VERSION/json-glib-$VERSION.tar.gz"
SHA256SUM="bf4d1cd6c343ce13b9258e6703a0411a3b659887b65877e85a2aa488ae18b865  json-glib-1.6.6.tar.gz"
DESCRIPTION="JSON-GLib implements a full JSON parser and generator using GLib and GObject"
build() {
    [ ! -d "json-glib-$VERSION" ] && tar -xvf json-glib-$VERSION.tar.gz
    cd json-glib-$VERSION || exit  1
    meson --prefix=/usr build/
    ninja -C build/
    DESTDIR=$ROOT ninja -C build/ install
}
