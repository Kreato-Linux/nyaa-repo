#!/bin/sh
NAME="mari"
RELEASE="2"
VERSION="5.0.1"
SOURCES="https://github.com/kreatolinux/src/archive/refs/tags/v$VERSION.tar.gz"
BUILD_DEPENDS="nim"
SHA256SUM="43f06b73e27542cc0eab46f9651d25049898f8777e4b79aea9be6167dd49acbc  v5.0.1.tar.gz"
DESCRIPTION="Kreato Linux's binary repository server"

build() {
        nimble install httpbeast -y
        nim c -d:release -o="out/mari" "mari/mari.nim"
}

package() {
        mkdir -p "$ROOT/bin"
        cp out/mari "$ROOT/bin/"
}
