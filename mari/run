#!/bin/sh
NAME="mari"
RELEASE="2"
VERSION="5.0.0"
SOURCES="https://github.com/kreatolinux/src/archive/refs/tags/v$VERSION.tar.gz"
BUILD_DEPENDS="nim"
SHA256SUM="1d7f156b56d79e6f0ab2601761d942824f11f5899127ede2da3f60a940cf86db  v5.0.0.tar.gz"
DESCRIPTION="Kreato Linux's binary repository server"

build() {
        nimble install httpbeast -y
        nim c -d:release -o="out/mari" "src/mari/mari.nim"
}

package() {
        mkdir -p "$ROOT/bin"
        cp out/mari "$ROOT/bin/"
}
