#!/bin/sh
NAME="shadow"
RELEASE="3"
VERSION="4.14.1"
SOURCES="https://github.com/shadow-maint/shadow/releases/download/4.14.1/shadow-4.14.1.tar.xz"
DEPENDS="libxcrypt linux-pam libbsd"
SHA256SUM="0141b283da9a0cd70128e9c083f1c64062686385ddaf5e64ca28de802e37e5d1"
DESCRIPTION="Shadow utils"

build() {
    ./configure  --disable-static \
                 --sysconfdir=/etc \
                 --with-libpam
    make
}

package() {
    make exec_prefix=/usr DESTDIR=$ROOT install
    sed -i 's/account.*/account         include         system-account/g' "$ROOT/etc/pam.d/su"
    rm -f $ROOT/etc/pam.d/login
  }

postinstall() {
   pwconv
}
