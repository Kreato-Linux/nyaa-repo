#!/bin/sh
NAME="freetype"
RELEASE="2"
VERSION="2.13.0"
SOURCES="https://download-mirror.savannah.gnu.org/releases/freetype/freetype-$VERSION.tar.gz"
SHA256SUM="a7aca0e532a276ea8d85bd31149f0a74c33d19c8d287116ef8f5f8357b4f1f80  freetype-2.13.0.tar.gz"
DESCRIPTION="FriBidi is an implementation of Unicode Bidirectional Algorithm"


build() {
    meson \
        --prefix=/usr \
        -Dharfbuzz=disabled \
        . output
    ninja -C output
}

install() {
        DESTDIR=$ROOT ninja -C output install
}
