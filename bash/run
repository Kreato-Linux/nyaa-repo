#!/bin/sh
NAME="bash"
VERSION="5.1.16"
DESCRIPTION="The GNU bash shell"

build() {
    [ ! -f "bash-$VERSION.tar.gz" ] && wget https://ftp.gnu.org/gnu/bash/bash-$VERSION.tar.gz
    [ ! -d "bash-$VERSION" ] && tar -xvf bash-$VERSION.tar.gz
    cd bash-$VERSION || exit  1
    ./configure --prefix=/usr                   \
                --build=$(support/config.guess) \
                --without-bash-malloc
    make
    make DESTDIR=$ROOT install
}
