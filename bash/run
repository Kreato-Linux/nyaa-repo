#!/bin/sh
NAME="bash"
RELEASE="1"
VERSION="5.2.15"
SOURCES="https://ftp.gnu.org/gnu/bash/bash-$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="13720965b5f4fc3a0d4b61dd37e7565c741da9a5be24edc2ae00182fc1b3588c  bash-5.2.15.tar.gz"
DESCRIPTION="The GNU bash shell"

build() {
    ./configure --prefix=/usr                   \
                --build=$(support/config.guess) \
                --without-bash-malloc
    make
}

package() {
    make DESTDIR=$ROOT install
}
