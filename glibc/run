#!/bin/sh
NAME="glibc"
VERSION="2.35"
SOURCES="https://ftp.gnu.org/gnu/glibc/glibc-$VERSION.tar.xz"
SHA256SUM="5123732f6b67ccd319305efd399971d58592122bcc2a6518a1bd2510dd0cf52e  glibc-2.35.tar.xz"
DESCRIPTION="The GNU C library"

build() {
    tar -xvf glibc-$VERSION.tar.xz
    cd glibc-$VERSION || exit
    mkdir -v build
    cd build || exit
    ../configure --prefix=/usr --host=x86_64-pc-linux-gnu --enable-kernel=3.2 \
        libc_sv_slibdir=/usr/lib
    make || exit
    make DESTDIR=$ROOT install

}
