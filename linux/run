#!/bin/sh
NAME="linux"
RELEASE="7"
VERSION="6.5.3"
SOURCES="https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-$VERSION.tar.xz;https://github.com/projg2/fedora-kernel-config-for-gentoo/raw/6.5.2-gentoo/kernel-x86_64-fedora.config;settings.config"
BUILD_DEPENDS="libelf xz-utils gmake"
DEPENDS="kmod"
SHA256SUM="4cac13f7b17bd8dcf9032ad68f9123ab5313d698c9f59416043165150763eb4f  linux-6.5.3.tar.xz;db3fdcfc55712c93728bc25d3846b9a9c66bf61bbed85efb0562879567a0c9a1  kernel-x86_64-fedora.config;04f33434bb1b16b2a38e3a36d6ce59e0bf032db6954d4a71d07d8f3f5ab37e4c  settings.config"
DESCRIPTION="The Linux kernel and headers"

prepare() {
	tar -xvf linux-$VERSION.tar.xz
	cd linux-$VERSION
	make mrproper
	./scripts/kconfig/merge_config.sh -m ../kernel-x86_64-fedora.config ../settings.config || exit 1 
	make olddefconfig
}

build_linux_headers() {
    cd linux-$VERSION
    make mrproper
    make headers
    find usr/include -name '.*' -delete
    rm usr/include/Makefile
}

package_linux_headers() {
    cd linux-$VERSION
    mkdir -p $ROOT/usr
    cp -rv usr/include $ROOT/usr/
}

build() {
     cd linux-$VERSION
     make -j$(nproc) || exit 1
}

package() {
    cd linux-$VERSION
    export INSTALL_MOD_PATH=$DESTDIR/usr
    export INSTALL_PATH=$DESTDIR/boot
    mkdir -p "$INSTALL_PATH" "$INSTALL_MOD_PATH"
    make install
    make INSTALL_MOD_STRIP=1 DEPMOD=/nodepmod/here modules_install
    mv "$DESTDIR/boot/vmlinuz" "$DESTDIR/boot/vmlinuz-$VERSION"
    mv "$DESTDIR/boot/System.map" "$DESTDIR/boot/System.map-$VERSION"
}

postinstall_linux() {
    depmod $VERSION
}
