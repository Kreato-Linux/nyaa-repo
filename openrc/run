#!/bin/sh
NAME="openrc"
RELEASE="1"
VERSION="0.49"
SOURCES="https://github.com/OpenRC/openrc/archive/refs/tags/$VERSION.tar.gz"
BUILD_DEPENDS="ninja meson"
SHA256SUM="3782a59a9cfccd4dcf19beab9593abd2eb5a3eefe3b35dbbd26d3931d8dc365b  0.49.tar.gz"
DESCRIPTION="The OpenRC init system"

build() {
    mkdir build
    cd build
    meson --prefix=/usr       \
          --buildtype=release \
	  -Dpam=false
    ninja
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
