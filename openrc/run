#!/bin/sh
NAME="openrc"
RELEASE="1"
VERSION="0.47.1"
SOURCES="https://github.com/OpenRC/openrc/archive/refs/tags/$VERSION.tar.gz"
SHA256SUM="ea692bcf8c380fd0ed168e7bb24018bcae14208011eb31f10665a0d46593b202  0.47.1.tar.gz"
DESCRIPTION="The OpenRC init system"

build() {
    mkdir build
    cd build
    meson --prefix=/usr       \
          --buildtype=release \
	  -Dpam=false
    ninja
}

install() {
    DESTDIR="$ROOT" ninja -C build install
}
