#!/bin/sh
NAME="nghttp2"
RELEASE="1"
VERSION="1.57.0"
SOURCES="https://github.com/nghttp2/nghttp2/releases/download/v$VERSION/nghttp2-$VERSION.tar.xz"
DEPENDS="zlib python"
SHA256SUM="9210b0113109f43be526ac5835d58a701411821a4d39e155c40d67c40f47a958"
DESCRIPTION="An implementation of the HTTP version 2 in C"

build() {
    ./configure \
        --prefix=/usr
    make
}

package() {
    make DESTDIR=$ROOT install
}
