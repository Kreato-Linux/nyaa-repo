#!/bin/sh
NAME="kpkg"
RELEASE="2"
VERSION="4-rc1"
SOURCES="https://github.com/kreatolinux/src/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="bea3dba8340f19fa3e12442e1fc6926bd0c859c516ed7048969783b8cf90ca64  v4-rc1.tar.gz"
DESCRIPTION="Kreato Linux's Package Manager"

build() {
        cd src-$VERSION || exit 1
        ./build.sh deps --nimbleDir=/tmp/nyaa_srcdir/deps
        ./build.sh kpkg --nimcache=/tmp/nyaa_srcdir/cache --nimbleDir=/tmp/nyaa_srcdir/deps 
        mkdir -p "$ROOT/bin"
        cp out/kpkg "$ROOT/bin/"
        mkdir -p "$ROOT/usr/share/man/man8"
        mkdir "$ROOT/usr/share/man/man5"
        cp -f man/kpkg.8 "$ROOT/usr/share/man/man8"
        cp -f man/kpkg_run.8 "$ROOT/usr/share/man/man8"
        cp -f man/kpkg.conf.5 "$ROOT/usr/share/man/man5"
}
