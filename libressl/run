#!/bin/sh
NAME="libressl"
RELEASE="1"
VERSION="3.7.3"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$VERSION.tar.gz"
SHA256SUM="7948c856a90c825bd7268b6f85674a8dcd254bae42e221781b24e3f8dc335db3"
DESCRIPTION="TLS library"

build() {
    ./configure
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}

