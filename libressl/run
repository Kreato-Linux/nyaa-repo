#!/bin/sh
NAME="libressl"
RELEASE="1"
VERSION="3.8.2"
SOURCES="https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$VERSION.tar.gz"
SHA256SUM="6d4b8d5bbb25a1f8336639e56ec5088052d43a95256697a85c4ce91323c25954"
DESCRIPTION="TLS library"

build() {
    ./configure
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}

