#!/bin/sh
NAME="bison"
VERSION="3.7.6"
SOURCES="https://ftp.gnu.org/gnu/bison/bison-$VERSION.tar.xz"
SHA256SUM="67d68ce1e22192050525643fc0a7a22297576682bef6a5c51446903f5aeef3cf  bison-3.7.6.tar.xz"
DESCRIPTION="a general-purpose parser generator"

build() {
    tar -xvf bison-$VERSION.tar.xz
    cd bison-$VERSION
    ./configure
    make DESTDIR=$ROOT install
}
