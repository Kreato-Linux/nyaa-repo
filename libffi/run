#!/bin/sh
NAME="libffi"
VERSION=3.4.3
SOURCES="https://github.com/libffi/libffi/releases/download/v$VERSION/libffi-$VERSION.tar.gz"
SHA256SUM="4416dd92b6ae8fcb5b10421e711c4d3cb31203d77521a77d85d0102311e6c3b8  libffi-3.4.3.tar.gz;"
DESCRIPTION=""

build() {
    tar -xvf libffi-$VERSION.tar.gz
    cd libffi-$VERSION || exit 1
    ./configure --prefix=/usr
    make
    make DESTDIR=$ROOT prefix=/usr install
}
