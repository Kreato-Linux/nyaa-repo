#!/bin/sh
NAME="gawk"
VERSION="5.2.0"
SOURCES="https://ftp.gnu.org/pub/gnu/gawk/gawk-$VERSION.tar.xz"
SHA256SUM="e4ddbad1c2ef10e8e815ca80208d0162d4c983e6cca16f925e8418632d639018  gawk-5.2.0.tar.xz"
DESCRIPTION="GNU awk"

build() {
    tar -xvf gawk-$VERSION.tar.xz
    cd gawk-$VERSION
    patch -p1 < $REPO_DIR/$NAME/patches/v5.2.0-add-missing-upref.diff || exit 1
    ./configure --prefix=/usr
    make DESTDIR=$ROOT install
}
