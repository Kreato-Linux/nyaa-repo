#!/bin/sh
NAME="ostree"
RELEASE="1"
VERSION="2023.4"
SOURCES="https://github.com/ostreedev/ostree/releases/download/v$VERSION/libostree-$VERSION.tar.xz"
SHA256SUM="7cee8ace6aae3c778527927a85abefbfbd491c021f52ae229c51ca3077f9c5d1  libostree-2023.4.tar.xz"
DESCRIPTION="Operating system and container binary deployment and upgrades"
build() {
    ./configure --with-gpgme=no --prefix=/usr
    make
}

install() {
    make DESTDIR=$ROOT install
}
