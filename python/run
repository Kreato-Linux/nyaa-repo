#!/bin/sh
NAME="python"
RELEASE="3"
VERSION="3.11.5"
SOURCES="https://www.python.org/ftp/python/$VERSION/Python-$VERSION.tar.xz"
DEPENDS="openssl zlib libxcrypt bzip2"
SHA256SUM="85cd12e9cf1d6d5a45f17f7afe1cebe7ee628d3282281c492e86adf636defa3f"
DESCRIPTION="General-Purpose Programming language"

build() {
    ./configure --disable-static --enable-shared --with-ensurepip=install --prefix=/usr --enable-optimizations
    make
}

package() {
    make DESTDIR="$ROOT" install
    ln -s "pip3" "$ROOT/usr/bin/pip"
    ln -s "python3" "$ROOT/usr/bin/python"
}
