#!/bin/sh
NAME="gnutls"
RELEASE="1"
VERSION="3.8.1"
SOURCES="https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/gnutls-$VERSION.tar.xz"
DEPENDS="libnettle"
SHA256SUM="ba8b9e15ae20aba88f44661978f5b5863494316fe7e722ede9d069fe6294829c"
DESCRIPTION="GNU TLS"

build() {
    ./configure --prefix=/usr --with-included-unistring
    make -j$(nproc)
}

package() {
    make DESTDIR="$ROOT" install
}
