#!/bin/sh
NAME="expat"
RELEASE="1"
VERSION="2.4.9"
SOURCES="https://github.com/libexpat/libexpat/releases/download/R_2_4_9/expat-$VERSION.tar.xz"
SHA256SUM="6e8c0728fe5c7cd3f93a6acce43046c5e4736c7b4b68e032e9350daa0efc0354  expat-2.4.9.tar.xz"
DESCRIPTION="a stream oriented C library for parsing XML"

build() {
    cd $NAME-$VERSION
    ./configure --prefix=/usr --disable-static
    make -j$(nproc)
    make DESTDIR=$ROOT install
}

