#!/bin/sh
NAME="expat"
VERSION="2.4.8"
SOURCES="https://github.com/libexpat/libexpat/releases/download/R_2_4_8/$NAME-$VERSION.tar.xz"
SHA256SUM="f79b8f904b749e3e0d20afeadecf8249c55b2e32d4ebb089ae378df479dcaf25  expat-2.4.8.tar.xz"
DESCRIPTION="a stream oriented C library for parsing XML"

build() {
    tar -xvf $NAME-$VERSION.tar.xz
    cd $NAME-$VERSION
    ./configure --prefix=/usr --disable-static
    make -j$(nproc)
    make DESTDIR=$ROOT install
}

