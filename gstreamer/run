#!/bin/sh
NAME="gstreamer"
RELEASE="1"
VERSION="1.22.5"
SOURCES="https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$VERSION.tar.xz"
BUILD_DEPENDS="meson gobject-introspection"
DEPENDS="glib"
SHA256SUM="4408d7930f381809e85917acc19712f173261ba85bdf20c5567b2a21b1193b61  gstreamer-1.22.5.tar.xz"
DESCRIPTION="gstreamer"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
