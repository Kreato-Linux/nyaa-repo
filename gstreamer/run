#!/bin/sh
NAME="gstreamer"
RELEASE="1"
VERSION="1.24.3"
SOURCES="https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$VERSION.tar.xz"
BUILD_DEPENDS="meson gobject-introspection python-setuptools"
DEPENDS="glib"
SHA256SUM="1225ef4a329fae1cadc5ec727dab249ad567e8072879493561ceb91ed34aa414"
DESCRIPTION="gstreamer"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
