#!/bin/sh
NAME="gstreamer"
RELEASE="1"
VERSION="1.22.7"
SOURCES="https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-$VERSION.tar.xz"
BUILD_DEPENDS="meson gobject-introspection"
DEPENDS="glib"
SHA256SUM="01e42c6352a06bdfa4456e64b06ab7d98c5c487a25557c761554631cbda64217"
DESCRIPTION="gstreamer"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
