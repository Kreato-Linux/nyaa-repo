#!/bin/sh
NAME="nss"
RELEASE="1"
VERSION="3.96.1"
SOURCES="https://archive.mozilla.org/pub/security/nss/releases/NSS_3_96_1_RTM/src/nss-3.96.1.tar.gz https://www.linuxfromscratch.org/patches/blfs/svn/nss-3.96.1-standalone-1.patch"
DEPENDS="nspr sqlite p11-kit zlib"
SHA256SUM="c51e89f6fbb06163f4302e368eeb672d748b52d583948bdb15ef1b069237a496 87bb1af0b11fd41311b9899187f6e4b3fca9940651123c7bc836ec7497d2da84"
DESCRIPTION="network stuff"

build() {
  cd nss
  if [ "$(uname -m)" = "x86_64" ]; then
    export USE_64=1
  else
    export USE_64=0
  fi

  # Taken from BLFS
  make -j$(nproc) BUILD_OPT=1                  \
    NSPR_INCLUDE_DIR=/usr/include/nspr  \
    USE_SYSTEM_ZLIB=1                   \
    ZLIB_LIBS=-lz                       \
    NSS_ENABLE_WERROR=0                 \
    NSS_USE_SYSTEM_SQLITE=1             \
    USE_64=$USE_64
}

package() {
    cd nss/dist
    # Taken from BLFS
    mkdir -p "$ROOT/usr/lib/pkgconfig" "$ROOT/usr/include/" "$ROOT/usr/bin"
    install -v -m755 Linux*/lib/*.so              $ROOT/usr/lib              
    install -v -m644 Linux*/lib/{*.chk,libcrmf.a} $ROOT/usr/lib              
    install -v -m755 -d                           $ROOT/usr/include/nss      
    cp -v -RL {public,private}/nss/*              $ROOT/usr/include/nss      

    install -v -m755 Linux*/bin/{certutil,nss-config,pk12util} $ROOT/usr/bin 
    install -v -m644 Linux*/lib/pkgconfig/nss.pc  $ROOT/usr/lib/pkgconfig  
}
