#!/bin/sh
NAME="flatpak"
VERSION="1.15.0"
SOURCES="https://github.com/flatpak/flatpak/releases/download/$VERSION/flatpak-$VERSION.tar.xz"
SHA256SUM="1b953f5f2684136de4e7930d77c240f04dedd4a114e57bac0a46f5681a0a3fa8 flatpak-1.15.0.tar.xz"
DESCRIPTION="Linux application sandboxing and distribution framework"
build() {
    [ ! -d "flatpak-$VERSION" ] && tar -xvf flatpak-$VERSION.tar.xz
    cd flatpak-$VERSION || exit  1
    meson --prefix=/usr build/
    ninja -C build/
    DESTDIR=$ROOT ninja -C build/ install
}
