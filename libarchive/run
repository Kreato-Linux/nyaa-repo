#!/bin/sh
NAME="libarchive"
VERSION="3.6.1"
SOURCES="https://github.com/$NAME/$NAME/releases/download/v$VERSION/$NAME-$VERSION.tar.xz"
SHA256SUM="5a411aceb978f43e626f0c2d1812ddd8807b645ed892453acabd532376c148e6  libarchive-3.6.1.tar.xz"
DESCRIPTION="Multi-format archive and compression library"

build() {
    tar -xvf $NAME-$VERSION.tar.xz
    
    cd $NAME-$VERSION
    
    # Taken from BLFS r11.2-232 
    sed '/linux\/fs\.h/d' -i libarchive/archive_read_disk_posix.c
    
    ./configure --prefix=/usr --disable-static
    make -j$(nproc)
    make DESTDIR=$ROOT install
}

