#!/bin/sh
NAME="glib"
RELEASE="1"
VERSION="2.78.0"
SOURCES="https://download.gnome.org/sources/glib/2.78/glib-$VERSION.tar.xz" 
BUILD_DEPENDS="meson ninja"
SHA256SUM="44eaab8b720877ce303c5540b657b126f12dc94972d9880b52959f43fb537b30  glib-2.78.0.tar.xz"
DESCRIPTION="glib"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    -Dman=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
