#!/bin/sh
NAME="glib"
RELEASE="1"
VERSION="2.76.1"
SOURCES="https://download.gnome.org/sources/glib/2.76/glib-$VERSION.tar.xz" 
SHA256SUM="525bb703b807142e1aee5ccf222c344e8064b21c0c45677ef594e587874c6797  glib-2.76.0.tar.xz"
DESCRIPTION="glib"

build() {
    meson \
    --prefix=/usr \
    -Dman=false \
    build
    ninja -C build
}

install() {
    DESTDIR="$ROOT" ninja -C build install
}
