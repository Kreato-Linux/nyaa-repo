#!/bin/sh
NAME="glib"
RELEASE="1"
VERSION="2.75.2"
SOURCES="https://gitlab.gnome.org/GNOME/glib/-/archive/$VERSION/glib-$VERSION.tar.gz" 
SHA256SUM="9515fd6a146cf8143b04c756bc9024c3f8302b1611ff22f22fca911aeeead991  glib-2.75.2.tar.gz"
DESCRIPTION="Low-level core library that forms the basis for projects such as GTK+ and GNOME"

build() {
    cd glib-$VERSION || exit 1
    meson \
    --prefix=/usr \
    -Dman=false \
    build
    ninja -C build
    DESTDIR="$ROOT" ninja -C build install
}
