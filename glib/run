#!/bin/sh
NAME="glib"
RELEASE="1"
VERSION="2.76.3"
SOURCES="https://download.gnome.org/sources/glib/2.76/glib-$VERSION.tar.xz" 
SHA256SUM="c0be444e403d7c3184d1f394f89f0b644710b5e9331b54fa4e8b5037813ad32a  glib-2.76.3.tar.xz"
DESCRIPTION="glib"

build() {
    meson \
    --prefix=/usr \
    -Dman=false \
    build
    ninja -C build
}

install() {
    DESTDIR="$ROOT" ninja -C build install
}
