#!/bin/sh
NAME="appstream"
RELEASE="1"
VERSION="0.16.2"
SOURCES="https://www.freedesktop.org/software/appstream/releases/AppStream-$VERSION.tar.xz" 
BUILD_DEPENDS="meson ninja"
DEPENDS="glib libxml2 libxmlb curl gobject-introspection libyaml"
SHA256SUM="f9cb80bd388fbf06be268afa7f2d65863c85d605ad874b905094f3982d03f232  AppStream-0.16.2.tar.xz"
DESCRIPTION="appstream"

build() {
    meson \
    --prefix=/usr \
    -Dman=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
