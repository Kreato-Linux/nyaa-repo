#!/bin/sh
NAME="appstream"
RELEASE="1"
VERSION="0.16.2"
SOURCES="https://github.com/ximion/appstream/archive/refs/tags/v$VERSION.tar.gz" 
BUILD_DEPENDS="meson ninja"
DEPENDS="glib libxml2 libxmlb curl gobject-introspection libyaml"
SHA256SUM="9a2ebe660704878ab795470a72cd53049408ddd9da6e9cb45232cf0ed6505660  v0.16.2.tar.gz"
DESCRIPTION="appstream"

build() {
    meson \
    --prefix=/usr \
    -Dman=false \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
