#!/bin/sh
NAME="pipewire"
RELEASE="1"
VERSION="0.3.80"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
DEPENDS="glib"
BUILD_DEPENDS="meson"
SHA256SUM="0bbaf3d46649ac2217f0bbf68dda7e62f1f2cf6b7f3025e364cf7205d1499ef9  pipewire-0.3.80.tar.gz"
DESCRIPTION="Sound server"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=disabled   \
    ..                    
    ninja
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
