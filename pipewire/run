#!/bin/sh
NAME="pipewire"
VERSION="0.3.61"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
SHA256SUM=";9cbc7048808c693cb7952c4b446e9ffbb91d1b34f057c340d83ae4e6d2d08f1d  pipewire-0.3.61.tar.gz"
DESCRIPTION="Sound server"

build() {
    tar -xvf pipewire-$VERSION.tar.gz
    cd pipewire-$VERSION || exit 1
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=disabled   \
    ..                    
    ninja
    DESTDIR="$ROOT" ninja install  
}
