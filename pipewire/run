#!/bin/sh
NAME="pipewire"
RELEASE="2"
VERSION="0.3.85"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
DEPENDS="glib"
OPTDEPENDS="dbus: for D-Bus support"
BUILD_DEPENDS="meson"
SHA256SUM="010b7f506a469093cf70e96b9d73c38a7c548606adc7f360ab2b4775566443c4"
DESCRIPTION="Sound server"

build() {
    dbusEnable="disabled"
    if [ -d "/var/cache/kpkg/installed/dbus" ]; then
	dbusEnable="enabled"
    fi

    meson setup \
      --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=$dbusEnable   \
      build  
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
