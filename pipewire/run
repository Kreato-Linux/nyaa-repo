#!/bin/sh
NAME="pipewire"
RELEASE="1"
VERSION="0.3.72"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
SHA256SUM="eb11d03e7c700e0d9204624fd3116f165f104c37eff30e93e7ac6df763e93829  pipewire-0.3.72.tar.gz"
DESCRIPTION="Sound server"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=disabled   \
    ..                    
    ninja
}

install() {
    DESTDIR="$ROOT" ninja -C build install  
}
