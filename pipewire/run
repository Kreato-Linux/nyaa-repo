#!/bin/sh
NAME="pipewire"
RELEASE="2"
VERSION="1.1.82"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
DEPENDS="glib"
OPTDEPENDS="dbus: for D-Bus support"
BUILD_DEPENDS="meson"
SHA256SUM="189878d58005fe3c22d2dd047688a76a8bd3f6394da3d17ec82f2b691e52e1cb"
DESCRIPTION="Sound server"

build() {
    dbusEnable="disabled"
    if [ -d "/var/cache/kpkg/installed/dbus" ]; then
	dbusEnable="enabled"
    fi
   
    meson setup \
      --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=$dbusEnable   \
      build  
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
