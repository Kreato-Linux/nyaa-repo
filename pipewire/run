#!/bin/sh
NAME="pipewire"
RELEASE="1"
VERSION="0.3.75"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
SHA256SUM="182fb03e8b5f4949a4564397c58cdfc20562afa8618db6f4fec7c860d17bd528  pipewire-0.3.75.tar.gz"
DESCRIPTION="Sound server"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=disabled   \
    ..                    
    ninja
}

install() {
    DESTDIR="$ROOT" ninja -C build install  
}
