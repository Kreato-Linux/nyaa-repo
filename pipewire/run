#!/bin/sh
NAME="pipewire"
RELEASE="1"
VERSION="0.3.74"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
SHA256SUM="901857530bfdb65a0282562ceeead28682e9aba2aefb4bbee10c74dcc333c72a  pipewire-0.3.74.tar.gz"
DESCRIPTION="Sound server"

build() {
    mkdir build 
    cd    build 
    meson --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=disabled   \
    ..                    
    ninja
}

install() {
    DESTDIR="$ROOT" ninja -C build install  
}
