#!/bin/sh
NAME="pipewire"
RELEASE="2"
VERSION="1.1.81"
SOURCES="https://github.com/PipeWire/pipewire/archive/$VERSION/pipewire-$VERSION.tar.gz"
DEPENDS="glib"
OPTDEPENDS="dbus: for D-Bus support"
BUILD_DEPENDS="meson"
SHA256SUM="df2b717de1348af87dee20e5345f210c481f12b6efa03bed5934d81c33422b81"
DESCRIPTION="Sound server"

build() {
    dbusEnable="disabled"
    if [ -d "/var/cache/kpkg/installed/dbus" ]; then
	dbusEnable="enabled"
    fi
   
    meson setup \
      --prefix=/usr \
      --buildtype=release   \
      -Dsession-managers=[] \
      -Ddbus=$dbusEnable   \
      build  
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install  
}
