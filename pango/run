#!/bin/sh
NAME="pango"
RELEASE="1"
VERSION="1.50.12"
SOURCES="https://download.gnome.org/sources/pango/1.50/pango-$VERSION.tar.xz" 
SHA256SUM="caef96d27bbe792a6be92727c73468d832b13da57c8071ef79b9df69ee058fe3  pango-1.50.12.tar.xz"
DESCRIPTION="Text (i.e. glyph) layout engine library"

build() {
    meson \
    --prefix=/usr \
    -Dgtk_doc=false \
    -Dxft=disabled \
    -Dcairo=disabled \
    build
    ninja -C build
}

install() {
    DESTDIR="$ROOT" ninja -C build install
}
