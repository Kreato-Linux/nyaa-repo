#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0668"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="ef7552f05c243f103761f3118a336f5e9e1bb9e587e61d5bfbea732ad77773c5"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
