#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0016"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="abe876bb18554bb1eb69d23eaabe89caabeef182737e9e8bfa4cc298dee061df"
DESCRIPTION="Vi Improved"

build() {
    export CFLAGS="-ltinfow $CFLAGS"
    export LDFLAGS="-ltinfow $LDFLAGS"
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
