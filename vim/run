#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0359"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="ee0c82d1e599ff1994d1c198cfc5e82f5b1c30852277e3c1bfe2f60ad3709f67"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
