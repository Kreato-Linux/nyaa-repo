#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0342"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="fa15a94f8e13068ece9618b5881b3964617252444c840201d3480a5bfadd54ad"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
