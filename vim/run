#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0312"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="f662595712d779b8ebc90473b682f2b2b1f79c7cb772756e324d78cb98fecd5b"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
