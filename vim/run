#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0447"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="3cc5d16713499d63ea5713394a823e59342a7091364c5e9c3997714c83577462"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
