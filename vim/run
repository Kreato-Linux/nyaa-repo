#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.0.2081"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="fbc4e8ecd5ebfbf87771f78360d275aa960f5baafd8d62d6fcb22a9f0354b72d"
DESCRIPTION="Vi Improved"

build() {
    export CFLAGS="-ltinfow $CFLAGS"
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
