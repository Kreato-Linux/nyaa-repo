#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0465"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="c99ba966ea797824e33ad7495f8a5395fd786cf9099efd92ca3a84090984f62f"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
