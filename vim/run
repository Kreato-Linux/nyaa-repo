#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0821"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="808c14415391032873172bb6f6fbad1d211626ec475bd2d73dd5b91c3621f44d"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
