#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0680"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="7deff226c03792bcfb610d01fc88ba48fd61523f273ebada3af4081b8e5abfbf"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
