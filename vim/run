#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0477"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="422961a6f15b2c7fc4e4081d3f79df29c6cba2b808adad15a8b1387805496250"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
