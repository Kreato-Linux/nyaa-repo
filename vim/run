#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0697"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="7bd36aa7120cbd003cfa07295dface39054c08893a4578a3307b1a226a27539d"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
