#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0035"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="12cc93ae0d68ddd3ab76c696c836e0d2bb24cdf38e9c471f78c885beddd54ee7"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
