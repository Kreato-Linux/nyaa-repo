#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0785"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="706214dd76c4b27f56b5332f43c5ed6d145d46307d0da4a8e161830c9c7be714"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
