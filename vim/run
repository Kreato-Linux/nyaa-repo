#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0679"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="0d43433ecbed5dc2313549893a6956303123c4e20ee41bb062cc2853d148249b"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
