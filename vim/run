#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0041"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="1531eb2f9a42e3e5a0c5579e26d9a376bd85f7062701c727af482d8597c59592"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
