#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0474"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="289d754f625fd7043739cfae2ace7bdbdb305971c7ac4aaca2c05ed1b68e9d6a"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
