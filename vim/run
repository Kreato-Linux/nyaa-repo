#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0631"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="2946257d7ee734ffa6ca3f295a22f1211e4eb00c720c5bc0cccc75cdde2a6d18"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
