#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0867"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="cdb720cddeeeaa28cef45d41c14e376b0bacc98c4ad51bdb080490884ba4516f"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
