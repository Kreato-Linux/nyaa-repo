#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0031"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="da27c73792e670e7ab0046de5dd2a898b91e1d238377aacebfbf05563a7fc457"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
