#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0042"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="fe1629e4e62c1d63191f218849fca49cde563ef9912c2b4b235adc8f210faf76"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
