#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0814"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="5fefd3c8bcc474b56873a4dd7c85748081443baedc253d39634d3553ec65d751"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
