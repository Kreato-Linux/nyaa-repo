#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0368"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="bc3a9b603c245815d54deafff65fbdf884666d5d8d5040e8e1658884278d6799"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
