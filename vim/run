#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0356"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="afb3eac501ab45276546b009886306344201e6169f832dd8f31f486a66bb74fb"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
