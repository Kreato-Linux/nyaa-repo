#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0774"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="2bbf5cfcd4210330a0edc7d11ac18ff3f8e78cf0ff26e0d03a52ce2e04d2c9b8"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
