#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0645"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="2c092336d5e6e8884f4613d1c501f7b8fe57f55367ac2f9a632ade2dcdda4855"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
