#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0029"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="e1c2bbb7f37aafd39e7e827af0b357af08d290604b6fcccc8acba85a390dfcd4"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
