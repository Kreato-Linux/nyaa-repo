#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0842"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="d910e6839c2e009df0babe188145beae78f1df4d266f85658c96498a38872260"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
