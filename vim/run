#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0787"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="586b3b9698d2aad50436f3b4bedff472d135c1709e410007d883979112859b5b"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
