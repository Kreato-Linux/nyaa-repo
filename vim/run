#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0429"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="26705d31bfec2b91c239894794abda154fe7a334c9d7bab7cf5a7d7e96aeaff2"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
