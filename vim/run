#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0354"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="f9aec7f4594ddaa83e32a9825e635bb71c49ef7873d5c0b49f256b1af0114876"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
