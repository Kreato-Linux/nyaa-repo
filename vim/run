#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0027"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="7e738cc69f042f0ce57cfc183d9d780efe57831b1c4193b9283270e2b534bfae"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
