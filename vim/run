#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0686"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="7dfaa5797fb58a28e5e266dd4bf8cdf2a5a2f7b0020fab1f1fb60b8c3ee7c3ea"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
