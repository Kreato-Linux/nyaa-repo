#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0470"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="d76ed5d1191b5c76fe7195125c9975d78c92a54254b8b5d377c6caf5739da259"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
