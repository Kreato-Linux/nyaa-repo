#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0050"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="a520a9858eb802dca493d98448a4c53140c46e8eebb6d0655f9c20cdcec6b227"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
