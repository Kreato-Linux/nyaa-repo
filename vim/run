#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0369"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="c53b65de7ea31ae64b480ec2c5fcaa3c9f0b3628e346e156f44c943cdb474975"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
