#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0848"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="6f91cb28ce791449172f8ddf01f331df3877d9f22b8e08520e5d7de6db9c05d7"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
