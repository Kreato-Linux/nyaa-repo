#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.0.2127"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="75c54e8d59a0497597fde761541846682f30daaf1f471e98a1d22da527186193"
DESCRIPTION="Vi Improved"

build() {
    ./configure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
