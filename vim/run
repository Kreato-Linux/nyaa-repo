#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0304"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="ba0fcd12ceeee1712911d9e789d87befef57bd80af888a8ae16e228c1eb5a39d"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
