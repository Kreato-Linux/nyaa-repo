#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0271"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="f342ccdbaf72bcc4e0166f6bfbd1e281c9b3d539d8bc90b24ea28cabd6705575"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
