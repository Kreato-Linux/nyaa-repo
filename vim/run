#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0806"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="a11ce833e808af01df3f75e40fef8682e10834ab73c6cc6775ca5e99677a0b62"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
