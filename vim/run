#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0044"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="0147f7bfd262541175b3b42a534a8630a006c0d77bb19cb6f434e6112ddd2f4d"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
