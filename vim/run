#!/bin/sh
NAME="vim"
RELEASE="1"
VERSION="9.1.0424"
BUILD_DEPENDS="gmake"
SOURCES="https://github.com/vim/vim/archive/refs/tags/v$VERSION.tar.gz"
DEPENDS="ncurses"
SHA256SUM="a26544becb8724167eefc87c5bdc346890808473b0b25da15f45f5d2055e3f91"
DESCRIPTION="Vi Improved"

build() {
    kpkgConfigure \
    	--with-local-dir \
    	--prefix=/usr
    make -j$(nproc)
}

package() {
    make install
}
