#!/bin/sh
NAME="busybox"
VERSION="1.33.0"
SOURCES="https://www.busybox.net/downloads/busybox-$VERSION.tar.bz2"
SHA256SUM="d568681c91a85edc6710770cebc1e80e042ad74d305b5c2e6d57a5f3de3b8fbd  busybox-1.33.0.tar.bz2"
DESCRIPTION="The Swiss Army Knife of Embedded Linux"

build() {
    tar -xvf busybox-$VERSION.tar.bz2 
    cd busybox-$VERSION || err "an error occured"
    make -j$(nproc) defconfig
    make -j$(nproc) busybox
    [ ! -d "$ROOT/bin" ] && mkdir -p $ROOT/bin/
    cp busybox $ROOT/bin/
}
