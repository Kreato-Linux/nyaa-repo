#!/bin/sh
NAME="foot"
RELEASE="1"
VERSION="1.15.1"
SOURCES="https://codeberg.org/dnkl/foot/archive/1.15.1.tar.gz"
SHA256SUM="3966ab2903509e9df29a01ed2a98ebf2a7e9ecdf7c4649a7c295e46a195dfd13  1.15.1.tar.gz"
DESCRIPTION="A fast, lightweight and minimalistic Wayland terminal emulator"
build() {
    meson --prefix=/usr build/
    ninja -C build/
}

install() {
    git config --global --add safe.directory /tmp/kpkg/srcdir/foot/subprojects/fcft
    DESTDIR=$ROOT ninja -C build/ install
}
