#!/bin/sh
NAME="gjs"
RELEASE="1"
VERSION="1.78.0"
SOURCES="https://gitlab.gnome.org/GNOME/gjs/-/archive/$VERSION/gjs-$VERSION.tar.gz"
DEPENDS="glib js115 libffi cairo dbus gobject-introspection readline dconf"
BUILD_DEPENDS="meson"
SHA256SUM="91be2ebcab6707e2d8301d4e261530a9b1d55082f5d7746ba0f978e2efb712f5  gjs-1.78.0.tar.gz"
DESCRIPTION="Javascript bindings for GNOME"

build() {
    meson setup \
    --prefix=/usr \
    --buildtype=release \
    --wrap-mode=nofallback \
    build
    ninja -C build
}

package() {
    DESTDIR="$ROOT" ninja -C build install
}
