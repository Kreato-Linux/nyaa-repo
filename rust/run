#!/bin/sh
NAME="rust"
RELEASE="1"
VERSION="1.73.0"
SOURCES="https://static.rust-lang.org/dist/rustc-$VERSION-src.tar.gz"
DEPENDS="llvm"
BUILD_DEPENDS="python"
SHA256SUM="96d62e6d1f2d21df7ac8acb3b9882411f9e7c7036173f7f2ede9e1f1f6b1bb3a"
DESCRIPTION="Memory-safe programming language that doesn't use garbage collection"

build() {
  :
}

package() {
  ./configure --set install.prefix="/usr" --set llvm.link-shared=true --llvm-config=/usr/bin/llvm-config 
  ./x.py build
  DESTDIR="$ROOT" ./x.py install
}
