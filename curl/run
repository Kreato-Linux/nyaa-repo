#!/bin/sh
NAME="curl"
VERSION="7.86.0"
SOURCES="https://curl.haxx.se/download/curl-$VERSION.tar.xz"
SHA256SUM=";2d61116e5f485581f6d59865377df4463f2e788677ac43222b496d4e49fb627b  curl-7.86.0.tar.xz"
DESCRIPTION=""
build() {
    [ ! -d "curl-$VERSION" ] && tar -xvf curl-$VERSION.tar.xz || exit 1
    
    cd curl-$VERSION || exit  1

    # Taken from Kiss Linux repo, License here https://github.com/kisslinux/repo/blob/master/LICENSE
    ./configure \
        --prefix=/usr \
        --disable-manual \
        --disable-ldap \
        --disable-ares \
        --without-librtmp \
        --without-libpsl \
        --without-libidn2 \
        --without-brotli \
        --without-zstd   \
        --with-openssl   \
        --with-nghttp2   \
        --with-ca-path=/etc/ssl/certs

    make
    make DESTDIR=$ROOT install
}
