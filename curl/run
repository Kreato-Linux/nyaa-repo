#!/bin/sh
NAME="curl"
RELEASE="1"
VERSION="8.3.0"
SOURCES="https://curl.haxx.se/download/curl-$VERSION.tar.xz"
DEPENDS="nghttp2 zlib nghttp2"
SHA256SUM="376d627767d6c4f05105ab6d497b0d9aba7111770dd9d995225478209c37ea63  curl-8.3.0.tar.xz"
DESCRIPTION=""
build() {
    # Taken from Kiss Linux repo, License here https://github.com/kisslinux/repo/blob/master/LICENSE
    ./configure \
        --prefix=/usr \
        --disable-manual \
        --disable-ldap \
        --disable-ares \
        --without-librtmp \
        --without-libpsl \
        --without-libidn2 \
        --without-brotli \
        --without-zstd   \
        --with-openssl   \
        --with-nghttp2   \
        --with-ca-path=/etc/ssl/certs

    make
}

package() {
    make DESTDIR=$ROOT install
}
