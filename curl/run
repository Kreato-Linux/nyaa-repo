#!/bin/sh
NAME="curl"
VERSION="7.85.0"
SOURCES="https://curl.haxx.se/download/curl-$VERSION.tar.xz"
SHA256SUM="88b54a6d4b9a48cb4d873c7056dcba997ddd5b7be5a2d537a4acb55c20b04be6  curl-7.85.0.tar.xz"
DESCRIPTION=""
build() {
    [ ! -d "curl-$VERSION" ] && tar -xvf curl-$VERSION.tar.xz || exit 1
    
    cd curl-$VERSION || exit  1

    # Taken from Kiss Linux repo, License here https://github.com/kisslinux/repo/blob/master/LICENSE
    ./configure \
        --prefix=/usr \
        --disable-manual \
        --disable-ldap \
        --disable-ares \
        --without-librtmp \
        --without-libpsl \
        --without-libidn2 \
        --without-brotli \
        --without-zstd   \
        --with-openssl   \
        --with-nghttp2   \
        --with-ca-path=/etc/ssl/certs

    make
    make DESTDIR=$ROOT install
}
