#!/bin/sh
NAME="libpng"
RELEASE="1"
VERSION="1.6.40"
SOURCES="https://github.com/glennrp/libpng/archive/refs/tags/v$VERSION.tar.gz"
SHA256SUM="62d25af25e636454b005c93cae51ddcd5383c40fa14aa3dae8f6576feb5692c2  v1.6.40.tar.gz"
DESCRIPTION="PNG library"

build() {
    ./configure --prefix=/usr    \
            --disable-static     \
            --have-ld-version-script
    make
}

install() {
    make DESTDIR="$ROOT" install
}
